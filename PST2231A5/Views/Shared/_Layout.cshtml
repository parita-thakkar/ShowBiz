<!DOCTYPE html>
<html>
<head>
    <!-- Do not modify the meta properties below -->
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="author" content="PST2231A5" />
    <meta name="application-name" content="2231-ea886f86-10f4-44f8-bd37-825baccc7f02" />

    <title>Show Biz II</title>

    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    @{
        var userAccount = new PST2231A5.Controllers.Manager.RequestUser(User as System.Security.Claims.ClaimsPrincipal);
    }
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Show Biz II", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>

            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Home", "Index", "Home")</li>
                </ul>
                @Html.Partial("_LoginPartial")


                @if (userAccount.IsAdmin)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                        <li>@Html.ActionLink("Actors", "Index", "Actors")</li>
                        <li>@Html.ActionLink("Shows", "Index", "Shows")</li>
                        <li>@Html.ActionLink("Episodes", "Index", "Episodes")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Load data <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Roles", "Index", "LoadData")</li>
                                <li>@Html.ActionLink("Genres", "LoadGenres", "LoadData")</li>
                                <li>@Html.ActionLink("Actors", "LoadActors", "LoadData")</li>
                                <li>@Html.ActionLink("Shows", "LoadShows", "LoadData")</li>
                                <li>@Html.ActionLink("Episodes", "LoadEpisodes", "LoadData")</li>
                            </ul>
                        </li>
                    </ul>
                }
                else if (userAccount.IsAuthenticated)
                {
                    <ul class="nav navbar-nav">
                        <li>@Html.ActionLink("Genres", "Index", "Genres")</li>
                        <li>@Html.ActionLink("Actors", "Index", "Actors")</li>
                        <li>@Html.ActionLink("Shows", "Index", "Shows")</li>
                        <li>@Html.ActionLink("Episodes", "Index", "Episodes")</li>
                        <li class="dropdown">
                            <a href="#" class="dropdown-toggle" data-toggle="dropdown">Load data <b class="caret"></b></a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Roles", "Index", "LoadData")</li>
                            </ul>
                        </li>
                    </ul>
                }
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>
                <small>
                    By submitting this assignment you agree to the following:
                    I declare that this assignment is my own work in accordance with the Seneca Academic
                    Policy. No part of this assignment has been copied manually or electronically from
                    any other source (including web sites) or distributed to other students.
                </small>
            </p>
            <p>&copy; Parita Sunilbhai Thakkar, psthakkar1@myseneca.ca, WEB524 Winter 2023</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>